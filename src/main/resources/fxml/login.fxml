<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.icc.clinic.controller.LoginController"
      stylesheets="/style.css"
      style="-fx-background-color: white;">
    
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <ImageView fx:id="logoImage" fitHeight="100" preserveRatio="true" pickOnBounds="true">
        <image>
            <Image url="@/logo.png" />
        </image>
    </ImageView>

    <Label text="Clinicly"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <VBox spacing="10" maxWidth="300">
        <Label text="Username:"/>
        <TextField fx:id="usernameField" promptText="Enter username"/>
        
        <Label text="Password:"/>
        <PasswordField fx:id="passwordField" promptText="Enter password"/>
        
        <Button text="Login" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        
        <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>
    </VBox>
</VBox> 